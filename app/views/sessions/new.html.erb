<h1>ログイン</h1>
<% if flash[:error] %>
  <p><%= flash[:error] %></p>
<% end %>
<%= form_tag sessions_create_path, method: :post do %>
  <div>
    <%= label_tag 'ID' %>
    <%= text_field_tag :id %>
  </div>
  <div>
    <%= label_tag 'パスワード' %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag 'ログイン' %>
<% end %>